instance Show Int where
  source Py from "core.py" ("mlc_show" as show)

instance Show Real where
  source Py from "core.py" ("mlc_show" as show)

instance Show Str where
  show x = x


instance Sized [a] where
  source Py ("len" as size)

instance Sized Str where
  source Py ("len" as size)


